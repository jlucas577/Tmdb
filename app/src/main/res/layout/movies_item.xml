<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_margin_card"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/mainBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterPath"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/adult"
            android:visibility="gone"
            android:layout_below="@+id/posterPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adulto"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/adult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Titulo"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/size_subtitle"
            android:textStyle="bold"
            android:maxLines="2" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>